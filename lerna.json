{
  "version": "3.1.0-alpha.2",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/compat-layers/*",
    "packages/serverless-components/*",
    "packages/libs/*",
    "packages/deprecated/*"
  ]
}
